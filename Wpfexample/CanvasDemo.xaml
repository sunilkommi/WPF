<Window x:Class="Wpfexample.CanvasDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfexample"
        mc:Ignorable="d"
        Title="CanvasDemo" Height="450" Width="800">
    <Canvas Background="Aqua" Margin="0,0,2,0">
        <Button Content="button1" Canvas.Top="100" Canvas.Left="100"/>
        <Rectangle Width="200" Height="200" Canvas.Top="150" Canvas.Left="150" Fill="Red"/>
        <Rectangle Width="200" Height="200" Canvas.Top="180" Canvas.Left="180" Fill="Yellow"/>
        <Rectangle Width="200" Height="200" Canvas.Top="200" Canvas.Left="200" Fill="Black" Panel.ZIndex="1"/>


    </Canvas>
</Window>
