<Window x:Class="Wpfexample.DocpanelDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfexample"
        mc:Ignorable="d"
        Title="DocpanelDemo" Height="450" Width="800">
    <DockPanel>
        
        <Label Background="Red" DockPanel.Dock="top" Content="this is top" FontSize="22"/>
        <Label Background="Blue" DockPanel.Dock="Bottom" Content="this is bottom area" FontSize="22"/>
        <Label Background="Cyan" DockPanel.Dock="Left" Content="this is left area" FontSize="22" Width="404"/>
        <Label Background="DeepSkyBlue" DockPanel.Dock="Right" Content="this is right area" FontSize="22"/>
    </DockPanel>
</Window>
