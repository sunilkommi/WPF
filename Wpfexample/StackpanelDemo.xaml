<Window x:Class="Wpfexample.StackpanelDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfexample"
        mc:Ignorable="d"
        Title="StackpanelDemo" Height="450" Width="800">
    <StackPanel>
        <Label Content="this is stackpanel demo" FontSize="24" FontWeight="Bold"/>
        <StackPanel Orientation="Vertical" Margin="0,0,-8,7">
            <Button Content="button1" Height="50" Width="150"/>
            <Button Content="button2" Height="50" Width="150"/>
            <Button Content="button3" Height="50" Width="150"/>
            <Button Content="button4" Height="50" Width="150"/>
            <Button Content="button5" Height="50" Width="150"/>
        </StackPanel>
    </StackPanel>

</Window>
